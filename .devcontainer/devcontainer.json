{
    "name": "Practice Robot Arm",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--gpus=all",
        "-e", "DISPLAY=${localEnv:DISPLAY}",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix:rw"
    ],
    "workspaceFolder": "/workspace",
    "remoteUser": "vscode",
    "postCreateCommand": "sudo chown -R vscode:vscode /workspace && colcon build --symlink-install || true",
    "extensions": [
        "ms-vscode.cpptools",
        "ms-iot.vscode-ros"
    ]
}
