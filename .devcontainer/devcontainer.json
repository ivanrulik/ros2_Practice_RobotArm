{
    "name": "Practice Robot Arm",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--gpus=all",
        "-e", "DISPLAY=${localEnv:DISPLAY}",
        "-e", "WAYLAND_DISPLAY=${localEnv:WAYLAND_DISPLAY}",
        "-e", "PULSE_SERVER=${localEnv:PULSE_SERVER}",
        "-e", "XDG_RUNTIME_DIR=${localEnv:XDG_RUNTIME_DIR}",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix:rw",
        "-v", "/mnt/wslg:/mnt/wslg",
        "-v", "/usr/lib/wsl:/usr/lib/wsl",
        "--device=/dev/dri"
    ],
    "containerEnv": {
        "XDG_RUNTIME_DIR": "/tmp/runtime-vscode"
    },
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "remoteUser": "vscode",
    "postCreateCommand": "sudo chown -R vscode:vscode /workspaces/${localWorkspaceFolderBasename} && colcon build --symlink-install || true",
    "extensions": [
        "ms-vscode.cpptools",
        "ms-iot.vscode-ros"
    ]
}
